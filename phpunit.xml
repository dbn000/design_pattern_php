        <testsuite name="Potter">
            <directory>./tests/Potter/</directory>
        </testsuite>
        <testsuite name="RomanNumerals">
            <directory>./tests/RomanNumerals/</directory>
        </testsuite>
        <testsuite name="StringCalculator">
            <directory>./tests/StringCalculator/</directory>
        </testsuite>
        <testsuite name="TennisGame">
            <directory>./tests/TennisGame/</directory>
        </testsuite>
        <testsuite name="TradingCardGame">
            <directory>./tests/TradingCardGame/</directory>
        </testsuite>
    </testsuites>
</phpunit>